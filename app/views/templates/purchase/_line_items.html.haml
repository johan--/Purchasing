
.edit_title
  Line Items
.line_items_header
  .description_field_header
    Description:
  .unit_field_header
    Unit:
  .quantity_field_header
    Quantity:
  .received_count_header
    Ordered / Received:
  .price_field_header
    Price:
  .price_field_header
    Extended:
.line_items
  =hb 'each line in controller' do
    %div{ bind: { class: ':line_item isHighlighted'}}
      .line_number
      =hb 'input value=line.description class="description_field"'
      =hb 'input value=line.unit class="unit_field"'
      =hb 'input value=line.quantity class="quantity_field"'
      .receiving_left.hidden
      %div{ bind: { class: 'isHighlighted:hidden:received_count' } }
        =hb 'twoCountsField'
      %div{ bind: { class: 'isHighlighted:received_count:hidden' } }
        =hb 'threeCountsField'
      .receiving_right.hidden
      =hb 'view App.PriceInput value=line.price'
      .extended_field
        =hb 'currency line.extendedCost'
      -permitted_to? :delete, :line_items do
        .delete
          =fa_icon 'times'

-permitted_to? :create, :line_items do
  -#.hidden.new_line_item{ 'data-new' => "#{render_new_line 'line_item_fields', f, :line_items}" }
