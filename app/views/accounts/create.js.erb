$('.new_account_loading').addClass('hidden');

<% if flash.count > 0 %>
  $("#flash_parent").html('<%= escape_javascript( render "layouts/flash_part" ) %>');
<% else %>
  select = $('#purchase_account_id');

  if (select == null || select.length == 0)
    return;

  select.removeClass('hidden');
  $('.new_account_fields').addClass('hidden');

  select.children().remove();

  // Add all accounts just for safety
  <% @accounts.each do |account| %>
    <% if account.number == @new_account.number %>
      selected = true;
    <% else %>
      selected = false;
    <% end %>

    // Add new record
    select.append($('<option>', {
        value: '<%=account.id%>',
        text: '<%=account.number%>'
    }).attr('selected', selected));
  <% end %>
<% end %>