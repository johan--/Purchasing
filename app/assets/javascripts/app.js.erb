
$(function() {
  $('body').tooltip({
    animation: true,
    html: true,
    placement: 'auto bottom',
    delay: { show: 300, hide: 50 },
    selector: '[data-toggle="tooltip"]',
    container: 'body'
  });

  // Send CSRF token in all jquery requests
  $.ajaxSetup({
    headers: {
      'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
    }
  });

  App.current_user = {
    id: <%= Authorization.current_user.id %>,
    username: '<%= Authorization.current_user.username %>',
    name: '<%= Authorization.current_user.name %>',
    email: '<%= Authorization.current_user.email %>',
    role: <%= Authorization.current_user.authorized_roles %>,
    photo_url: '<%= Authorization.current_user.photo_url %>'
  }
});

// Globals
(function(){
  App.Globals = {
    DATE_STRING: 'MMM D, YYYY',
    DATE_STRING_DATEBOX: 'M d, yyyy'
  };
})();

isEmpty = Ember.isEmpty;
