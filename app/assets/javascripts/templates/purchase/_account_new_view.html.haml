
.modal#accountAdd{ 'tabindex' => '-1', role: 'dialog', 'aria-labelledby' => 'accountAddModal', 'aria-hidden' => 'true' }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
          =fa_icon 'times'
        %h4
          Add Account

      .modal-body

        .form-group
          %label.control-label{ 'for' => '#fund' }
            Fund - must be 6 digits, usually is 101000
          =hb 'view App.ValidatedInputView id="fund" value="101000" placeholder="Fund" class="form-control new_fund_field" maxlength=6 validatedLength=6'

        .form-group
          %label.control-label{ 'for' => '#org' }
            Org - must be 6 digits
          =hb 'view App.ValidatedInputView id="org" placeholder="Org" class="form-control new_org_field" maxlength=6 validatedLength=6'

        .form-group
          %label.control-label{ 'for' => '#acct' }
            Acct - must be 5 digits
          =hb 'view App.ValidatedInputView id="acct" placeholder="Acct" class="form-control new_acct_field" maxlength=5 validatedLength=5'

      .modal-footer
        %button.btn.btn-default.accountAddClose{ type: 'button', 'data-dismiss' => 'modal' }
          Close
        %button.btn.btn-primary.accountAddSave{ type: 'button', _action: 'newAccountSave target="view"' }
          Save
