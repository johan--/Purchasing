-if permitted_to? :update, :notes
  .note
    =hb 'view App.DescriptionInputView value=text class="note_field"'
    .delete{ _action: 'deleteMe target="view"' }
      =fa_icon 'times'
    .note_date.note_gap=hb 'created_at'
    .note_date=hb 'updated_at'
    .note_date=hb 'last_user'

-else
  .note
    .note_field=hb 'note'
    .note_date.note_gap=hb 'created_at'
    .note_date=hb 'updated_at'
    .note_date=hb 'last_user'
