
.col-lg-8.h3
  =hb 'partial "views/star"'

  =hb 'if id' do
    Edit record
    =hb 'id'
    =hb 'else'
    New Record

  =hb 'if buyer.name' do
    %button{ type: 'button', class: 'btn btn-link', _action: 'unclaimPurchase', title: 'Click to unclaim' }
      =hb 'buyer.name'

    =hb 'else'
    %button{ type: 'button', class: 'btn btn-default', _action: 'claimPurchase' }
      Claim

  %button{ type: 'button', class: 'btn btn-default active', _action: 'toggleEditing', title: 'Edit Record' }
    Edit Record

