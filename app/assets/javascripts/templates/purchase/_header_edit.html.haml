  %ul.nav.navbar-nav.pull-right.edit_buttons
    %li{ _action: 'openAttachments', title: 'Open Attachments' }
      %a.hover_red{ href: '#' }
        =fa_icon 'thumb-tack lg'
        =hb 'attachmentCount'

    %li{ _action: 'saveRequisition', title: 'Save PDF' }
      %a{ href: '#' }
        =fa_icon 'download lg'

    %li{ _action: 'emailRequisition', title: 'Email Purchase Requisition' }
      %a{ href: '#' }
        =fa_icon 'envelope lg'

