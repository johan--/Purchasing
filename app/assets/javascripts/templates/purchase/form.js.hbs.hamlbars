
=hb 'view App.NotificationView'

.edit_box
  =hb 'if isEditing' do
    =hb 'partial "purchase/edit"'
    =hb 'else'
    =hb 'partial "purchase/show"'

  =hb 'unless isNew' do
    =hb 'if App.Session.currentUser.is_buyer_or_receiver' do
      =hb 'render "purchaseAttachments" controller="purchaseAttachments"'

    =hb 'if App.Session.currentUser.is_buyer' do
      =hb 'view App.EmailView'
