
.modal-header
  %h3
    =hb 'if id' do
      Vendor
      =hb 'id'

    %strong
      =hb 'name'

    %button.close{ type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
      =fa_icon 'times'

.modal-body.vendor-modal-show
  .col-xs-12
    .form-group
      %label Name
      =hb 'name'

  .col-xs-12
    .form-group.vendor-website
      %label Web
      %a{ bind: { href: 'website_url' }, target: '_blank' }
        =hb 'website'
    .form-group.vendor-email
      %label Email
      %a{ bind: { href: 'email_url' } }
        =hb 'email'

  .row
    .col-xs-6
      .form-group
        %label Address
        =hb 'address'
      .form-group
        %label City
        =hb 'city'
      .form-group
        %label State
        =hb 'state'
      .form-group
        %label Zip-code
        =hb 'zip_code'

    .col-xs-6
      .form-group
        %label Account
        =hb 'account_num'
      .form-group
        %label Ph:
        =hb 'phone'
      .form-group
        %label Fx:
        =hb 'fax'
      .form-group
        %label Country
        =hb 'country'

    .col-xs-12
      %label Comments
      =hb 'comments'

.modal-footer
  .pull-left
    =hb 'if model.can_delete' do
      =hb 'if id' do
        %button{ class: 'btn btn-danger vendor-delete', _action: 'deleteRecord', 'data-toggle' => 'tooltip', title: 'Delete Vendor', bind: { 'disabled' => 'num_purchases' } }
          =fa_icon 'times'
          Delete Vendor

  .pull-right
    %button{ class: 'btn btn-default vendor-edit', _action: 'startEditing', 'data-toggle' => 'tooltip', title: 'Edit Record' }
      =fa_icon 'rotate-left'
      Edit
