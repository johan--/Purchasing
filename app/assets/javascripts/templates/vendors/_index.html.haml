
#flash_parent
  =hb 'view App.NotificationView'

.row
  .col-lg-4
    =hb 'view App.VendorSearchBox'

  .col-lg-5.col-lg-offset-1
    =hb 'view App.PaginatorView'

  .col-lg-2
    -permitted_to? :create, :vendors do
      %button{ type: 'button', class: 'btn btn-lg btn-success', _action: 'newRecord', 'data-toggle' => 'tooltip', title: 'New Vendor' }
        =fa_icon 'plus 2x'
        New Record

.row.text-center.vendor-letters
  =hb 'each getAllLetters' do
    =hb "view App.LetterPaginatorView contentBinding='this'"

%br

.row.text-center
  .vendor_list
    =hb 'each' do
      =hb 'view App.VendorRecordView'

    =hb 'if noRecordsFound' do
      %br
      No records found
