
.modal-header
  %h2
    =hb 'if isNew' do
      New Vendor

      =hb 'else'

      Edit Vendor
      =hb 'id'

    %button.close{ type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
      =fa_icon 'times'

.modal-body.vendor-modal-edit
  .col-xs-12
    .form-group{ bind: { class: ':vendor-name name::has-error' } }
      %label Name
      =hb 'input class="form-control" value=name'

  .col-xs-12
    .form-group
      %label Web
      =hb 'input class="form-control" value=website'
    .form-group
      %label Email
      =hb 'input class="form-control" value=email'

  .row
    .col-xs-6
      .form-group
        %label Address
        =hb 'input class="form-control" value=address'
      .form-group
        %label City
        =hb 'input class="form-control" value=city'
      .form-group
        %label State
        =hb 'input class="form-control" value=state'
      .form-group
        %label Zip-code
        =hb 'input class="form-control" value=zip_code'

    .col-xs-6
      .form-group
        %label Account
        =hb 'input class="form-control" value=account_num'
      .form-group
        %label Ph:
        =hb 'view App.PhoneNumberInput class="form-control" value=phone'
      .form-group
        %label Fx:
        =hb 'view App.PhoneNumberInput class="form-control" value=fax'
      .form-group
        %label Country
        =hb 'input class="form-control" value=country'

    .col-xs-12
      .form-group
        %label Comments
        =hb 'textarea value=comments rows=3 class="form-control"'

.modal-footer
  =hb 'if isNew' do

    .pull-right
      %button{ class: 'btn btn-link vendor-cancel', _action: 'close', 'data-toggle' => 'tooltip', title: 'Cancel editing vendor' }
        =fa_icon 'rotate-left'
        Cancel

      =hb 'if model.can_create' do
        %button{ class: 'btn btn-success btn-lg vendor-create', _action: 'saveRecord', 'data-toggle' => 'tooltip', title: 'Save changes to vendor' }
          =fa_icon 'save'
          Create

    =hb 'else'

    .pull-left
      =hb 'if model.can_delete' do
        =hb 'if id' do
          %button{ class: 'btn btn-danger vendor-delete', _action: 'deleteRecord', 'data-toggle' => 'tooltip', title: 'Delete Vendor', bind: { 'disabled' => 'num_purchases' } }
            =fa_icon 'times'
            Delete Vendor

    .pull-right
      %button{ class: 'btn btn-link vendor-cancel', _action: 'stopEditing', 'data-toggle' => 'tooltip', title: 'Cancel editing vendor' }
        =fa_icon 'rotate-left'
        Stop Editing

      =hb 'if model.can_update' do
        =hb 'if model.isDirty' do
          %button{ class: 'btn btn-success btn-lg vendor-save', _action: 'saveRecord', 'data-toggle' => 'tooltip', title: 'Save changes to vendor' }
            =fa_icon 'save'
            Save
