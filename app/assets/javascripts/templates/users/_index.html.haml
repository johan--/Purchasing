.navigation_buttons
  =hb 'view App.UserSearchBox'

.user_box
  %h2
    Users
  .page_box
    =hb 'view App.PaginatorView'

  -if current_user.can_impersonate?
    .impersonate
      =render partial: 'impersonate_buttons'

  .user_list
    .name Name
    .username Username
    .title Title
    .department Department
    .email Email
    .phone Phone
    .current_login Current Login
    .last_login Last Login
    .login_count #

    =hb 'each' do
      =hb 'view App.UserRecordView'

    =hb 'if noRecordsFound' do
      %br
      No records found
  #flash_parent
    =hb 'view App.NotificationView'
