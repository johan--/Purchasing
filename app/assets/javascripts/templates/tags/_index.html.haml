=hb 'modal-dialog action="closeModal"' do
  .edit_tag_box
    .tags
      =hb 'each' do
        %div{ bind: { class: ':tag isEditing' } }
          =hb 'if isEditing' do
            =hb 'view App.TagAdminView value=name maxlength=30'
            .controls
              %span.clickable{ _action: 'stopEditing' }
                Cancel
              %span.clickable{ _action: 'saveTag' }
                Save

            =hb 'else'
            .bar{ _action: 'startEditing' }
              %label=hb 'name'
            -permitted_to? :delete, :tags do
              .delete{ _action: 'deleteTag' }
                X
    .controls
      .button.bottom_button.red{ _action: 'closeModal' }
        =fa_icon 'rotate-left'
        Close
      .button.bottom_button.green{ _action: 'createTag' }
        =fa_icon 'plus'
        Add Record
