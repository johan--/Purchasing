
%div{ _action: 'hoverMe', bind: { class: ':hidden-xs :btn :btn-info :btn-xs :row_hover_button isCurrentlyHovering:active' } }
  =fa_icon 'folder-open'

.btn-group
  .btn.btn-sm.btn-default.hidden-xs{ _action: 'openRecordShow', 'data-toggle' => 'tooltip', title: 'Show record' }
    Show
  .btn.btn-sm.btn-default.dropdown-toggle{ 'data-toggle' => 'dropdown' }
    %span.caret
    %span.sr-only Actions

  %ul.dropdown-menu.dropdown-menu-right{ 'role' => 'menu' }
    =hb 'if model.can_update' do
      %li{ _action: 'openRecordEdit', 'data-toggle' => 'tooltip', title: 'Edit record' }
        %a
          =fa_icon 'edit fw'
          Edit

    =hb 'if model.can_delete' do
      =hb 'if canCancel' do
        %li{ _action: 'cancelRecord', 'data-toggle' => 'tooltip', title: 'Cancel record' }
          %a
            =fa_icon 'times fw'
            =hb 'if dateCanceled' do
              Un-Cancel
              =hb 'else'
              Cancel

        =hb 'else'

        %li{ _action: 'deleteRecord', 'data-toggle' => 'tooltip', title: 'Delete record' }
          %a
            =fa_icon 'times fw'
            Delete

    =hb 'if canHaveActionControls' do
      =hb 'if isSelected' do
        %li{ _action: 'selectRecord', 'data-toggle' => 'tooltip', title: 'Un-Select record' }
          %a
            =fa_icon 'circle-o fw'
            Un-Select

        =hb 'else'

        %li{ _action: 'selectRecord', 'data-toggle' => 'tooltip', title: 'Select record' }
          %a
            =fa_icon 'check fw'
            Select
