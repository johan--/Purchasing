
%dl
  %dt Vendor
  %dd
    %strong.h3=hb 'vendor_string'

%dl
  %dt Date Requested
  %dd=hb 'dateRequested'

%dl
  %dt Requester
  %dd
    %strong=hb 'requester.name'

%dl
  %dt Department
  %dd=hb 'requester.department'

%br

.h4 Line Items
%table.table.table-striped
  %thead
    %tr
      %th Description
      %th Quantity
      %th Received

  %tbody
    =hb 'each lineItems' do
      %tr
        %td=hb 'description'
        %td=hb 'quantity'
        %td
          %strong=hb 'received_count_server'

=hb 'if receivings.length' do
  .h4 Receivings
  %table.table.table-striped.text-center
    %thead
      %tr
        %th Package ID
        %th Date
        %th Price
    %tbody
      =hb 'each receivings' do
        %tr
          %td=hb 'package_num'
          %td=hb 'package_date'
          %td
            %strong=hb 'currency total_price'
