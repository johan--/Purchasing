
%span{ hb: 'bind-attr title=titleText class=":row isSelected"' }
  .controls
    =hb 'partial "views/star"'
    -if permitted_to? :reconcile, :purchases
      =hb 'input type="checkbox" checkedBinding="isSelected"'
  .bar{ _action: 'openRecord' }
    .date_cell
      =hb 'medDate dateRequested'
    .vendor_cell
      =hb 'vendorString'
    .requester_cell
      =hb 'requester.name'
    .department_cell
      =hb 'requester.department'
    .buyer_cell
      =hb 'buyer.name'
  .tag_cells
    =hb 'each tags' do
      .small_tag
        =hb 'name'
  .price_cell
    =hb 'currency grandTotal'
  -permitted_to? :delete, :purchases do
    .delete.top_padded{ _action: 'deleteMe target="view"' }
      =fa_icon 'times'


