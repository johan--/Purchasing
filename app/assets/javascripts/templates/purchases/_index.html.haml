
.purchase_box
  .purchases_header
    =hb 'partial "purchases/header"'

  .purchases
    =hb 'each' do
      =hb 'view App.PurchasesRowView'

  .navigation_buttons
    .quick_search_form
      -#=form_tag search_purchases_path, id: 'quick_find', method: :get do
      =text_field_tag :lines, params[:lines], id: 'quick_find_text', placeholder: 'Search'
      =hidden_field_tag :search, params[:search], value: true
      %button{ 'type' => 'submit', 'class' => 'search_image_link' }
        =fa_icon 'search 2x'

    -permitted_to? :create, :purchases do
      .new_image_link#new{ _action: 'newPurchase' }
        =fa_icon 'plus 2x'

  #flash_parent
    =hb 'view App.NotificationView'
