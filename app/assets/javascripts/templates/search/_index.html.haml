
.purchase_box

  .purchases_header
    .action_controls

    .tabs
      .found_count
        Found:
        %span.bold
          =hb 'foundCount'
        record(s)
        %br
        Showing
        =hb 'foundRange'

      .right_controls
        =hb 'view App.PaginatorView'

    .header_fields
      =hb 'partial "purchases/header_fields"'

  .purchases
    =hb 'each' do
      =hb 'view App.PurchasesRowView'


  .navigation_buttons
    =hb 'view App.SearchBoxView'
    =hb 'view App.AdvancedSearchBoxView'

  #flash_parent
    =hb 'view App.NotificationView'
